<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<div class="btn-group">
  <%= link_to "Edit", edit_article_path(@article), class:"btn btn-warning rounded-end-0 rounded-start-2" %>
  <%= link_to "Destroy",
              article_path(@article),
              data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              },
              class: "btn btn-danger rounded-start-0 rounded-end-2" %>
</div>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render "comments/form", article: @article %>
